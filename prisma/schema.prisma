// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

datasource db {
    provider = "postgresql"
    // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Samples {
    id                                  String    @id @default(cuid())
    cbhDonorID                          String?
    cbhMasterID                         String?
    cbhSampleID                         String?
    price                               Int?
    quantity                            Float?
    unit                                String?
    matrix                              String?
    storageTemperature                  String?
    freezeThawCycles                    Int?
    sampleCondition                     String?
    infectiousDeiseaseTestResult        String?
    gender                              String?
    age                                 Int?
    ethnicity                           String?
    bmi                                 Int?
    labParameter                        String?
    resultInterpretation                String?
    resltRaw                            Float?
    resultNumerical                     Float?
    resultUnit                          String?
    cutOffRaw                           String?
    cutOffNumerical                     Float?
    testMethod                          String?
    testSystem                          String?
    testSystemManufacturer              String?
    resultObtainedFrom                  String?
    diagnosis                           String?
    diagnosisRemarks                    String?
    ICDCode                             String?
    pregnancyWeek                       Int?
    pregnancyTrimester                  String?
    medication                          String?
    therapy                             String?
    histologicalDiagnosis               String?
    organ                               String?
    diseasePresentation                 String?
    TNMClassN                           String?
    TNMClassM                           String?
    tumorGrade                          String?
    tumorStage                          String?
    viableCellsPer                      String?
    necroticCellsPer                    String?
    tumorCellsPer                       String?
    proliferationRate                   String?
    estrogenReceptor                    String?
